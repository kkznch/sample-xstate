{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"],
    }
  },
}
